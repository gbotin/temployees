.row
  .col-md-6.col-md-offset-3

    .panel.panel-default.panel-top
      .panel-heading
        %h1.panel-title Importer un fichier Excel

      .panel-body
        = form_for @import, :html => {:class => 'form-horizontal', :role => 'form'} do |f|
          %fieldset
          
            .form-group
              = f.label :file, :class => 'control-label col-md-4'
              .col-md-8
                = f.file_field :file, :class => 'hide'
                .input-group
                  = text_field_tag 'file_text', nil, readonly: true, :class => 'form-control'
                  %span.input-group-btn
                    %a.btn.btn-default#browse Parcourir...
            .form-group
              .col-md-8.col-md-offset-4
                = f.submit "Envoyer", :class => 'btn btn-default'